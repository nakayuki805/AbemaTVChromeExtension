{
	"manifest_version": 2,
	"name": "abematv ext",
	"version": "0.13.16",
	"description": "abematvを快適にする非公式の拡張機能(番組通知自動再生、コメントNGワード、映像上コメント流し、映像サイズ固定など様々な機能を柔軟に設定できます)",
	"icons": {
		"128": "abemaexticon.png"
	},
	"applications": {
		"gecko": {
			"id": "abematvextension@nakayuki.net",
			"strict_min_version": "47.0",
			"update_url": "https://www.nakayuki.net/abema-ext/update.json"
		}
	},
	"permissions": [
		"storage",
		"alarms",
		"notifications",
		"tabs",
		"contextMenus",
		"webNavigation"
	],
	"content_scripts": [
		{
			"matches": ["https://abema.tv/*"],
			"js": ["jquery-2.2.3.min.js", "settings.js", "onairpage.js", "updatenotify.js"],
			"run_at": "document_start"
	}
	],
	"web_accessible_resources": [
		"onairpage.js",
		"onairpage.css",
		"jquery-2.2.3.min.js",
		"option.html",
		"prognotifies.html",
		"icon/gear.svg",
		"icon/mastodon-icon.svg",
		"icon/mastodon-icon-blue.svg",
		"page-injection.js",
		"xhr-injection.js"
	],
	"background": {
		"scripts": ["jquery-2.2.3.min.js", "event.js"]
	}
}