{
	"manifest_version": 2,
	"name": "abematv ext",
	"version": "0.4.5",
	"description": "abematvを視聴しやすくする非公式の拡張機能",
	"icons": {
		"128": "abemaexticon.png"
	},
	"applications": {
		"gecko": {
			"id": "abematvextension@nakayuki.net",
			"strict_min_version": "47.0",
			"update_url": "https://www.nakayuki.net/abema-ext/update.json"
		}
	},
	"permissions": [
		"storage",
		"alarms",
		"notifications",
		"tabs",
		"contextMenus"
	],
	"content_scripts": [
		{
			"matches": ["https://abema.tv/*"],
			"js": ["jquery-2.2.3.min.js", "settings.js", "onairpage.js", "updatenotify.js"],
			"run_at": "document_start"
	}
	],
	"web_accessible_resources": [
		"onairpage.js",
		"onairpage.css",
		"jquery-2.2.3.min.js",
		"option.html",
		"prognotifies.html",
		"icon/gear.svg"
	],
	"background": {
		"scripts": ["event.js"]
	}
}